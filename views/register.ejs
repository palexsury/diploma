
<%- include ('./partials/messages') %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <form action="/users/register" method="POST" class="form-row" style="padding: 100px;">
    <h1>Регистрация</h1>
    <input type=hidden id='publicKey' name='publicKey' class="form-control" />
    <div>
      <label for="name" class="form-label">Имя </label> 
      <input type="name" name="name" placeholder="Имя" class="form-control" value="<%= typeof name != 'undefined' ? name : '' %>" />

    </div>
    <div>
      <label for="email" class="form-label">Email</label>
      <input type="email" name="email" placeholder="Email" class="form-control"
        value="<%= typeof email != 'undefined' ? email : '' %>" />
    </div>
    <div>
      <label for="password" class="form-label">Пароль</label>
      <input type="password" name="password" placeholder="Пароль" class="form-control"
        value="<%= typeof password != 'undefined' ? password : '' %>" />
    </div>
    <div>
      <label for="password2" class="form-label" >Подтвердите пароль</label>
      <input type="password" name="password2" placeholder="Подтвердите пароль" class="form-control"
        value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
    </div>
    <button id="reg-btn" type="submit" class="btn btn-primary btn-block">
      Регистрация
    </button>
    <p>Есть аккаунт? <a href="/users/login" >Войти"</a></p>
  </form>

  <script src="/openpgp.js"> </script>
  <script src="/functions.js"> </script>

  <script>
    generateKeys();
  </script>